<Regrowth>

<!-- Possible Regrowing Crops mod start -->

<!-- CUSTOM -->

<append xpath="/blocks">

<block name="plantedYucca1_custom1">
    <property name="Extends" value="cropsGrowingMaster" param1="CustomIcon" />
    <property name="CreativeMode" value="None" />
    <property name="Material" value="Mcorn" />
    <property name="Shape" value="ModelEntity" />
    <property name="Model" value="Entities/Plants/plant_yucca_sproutPrefab" />
    <property name="PlantGrowing.Next" value="plantedYucca2_custom1" />
    <property name="DowngradeBlock" value="plantedYucca1_custom1" />
	<property name="ImposterDontBlock" value="true" />
</block>

<block name="plantedYucca2_custom1">
    <property name="Extends" value="plantedYucca1_custom1" />
    <property name="CustomIcon" value="plantedYucca1" />
    <property name="CreativeMode" value="None" />
    <property name="Model" value="Entities/Plants/plant_yucca_growthPrefab" />
    <property name="PlantGrowing.Next" value="plantedYucca3Harvest_custom1" />
    <drop event="Harvest" name="foodCropYuccaFruit" count="1" />
    <property name="DowngradeBlock" value="plantedYucca1_custom1" />
</block>

<block name="plantedYucca3Harvest_custom1">
    <property name="Extends" value="cropsHarvestableMaster" />
    <property name="Material" value="Mcorn" />
    <property name="Shape" value="ModelEntity" />
    <property name="Model" value="Entities/Plants/plant_yucca_harvestPrefab" />
    <drop event="Harvest" name="foodCropYuccaFruit" count="2" tag="wildCropsHarvest" />
    <property name="DowngradeBlock" value="plantedYucca1_custom1" />
</block>

</append>

<xpath append="/blocks/block[@name='plantedYucca3Harvest']/property[@name='DowngradeBlock']/@value">plantedYucca1_custom1</append>

<!-- END CUSTOM -->

